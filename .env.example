# Exemplo de variáveis de ambiente para o microsserviço de notificações
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Configuração do Servidor
PORT=3000
NODE_ENV=development
API_VERSION=v1
LOG_LEVEL=info

# Configuração do Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua-chave-publica
SUPABASE_SERVICE_KEY=sua-chave-de-servico

# Configuração de Redis
REDIS_URI=redis://username:password@host:port

# Configuração de Mensageria
RABBITMQ_URI=amqp://username:password@host:port

# Configuração de Canais e Provedores
DEFAULT_SMS_PROVIDER=twilio
DEFAULT_EMAIL_PROVIDER=sendgrid
DEFAULT_WHATSAPP_PROVIDER=meta-api

# Configuração Twilio (SMS)
TWILIO_ACCOUNT_SID=sua-account-sid
TWILIO_AUTH_TOKEN=seu-auth-token
TWILIO_PHONE_NUMBER=seu-numero

# Configuração AWS SNS (SMS)
AWS_REGION=sua-regiao
AWS_ACCESS_KEY_ID=sua-access-key
AWS_SECRET_ACCESS_KEY=sua-secret-key

# Configuração SendGrid (Email)
SENDGRID_API_KEY=sua-api-key
SENDGRID_FROM_EMAIL=seu-email@exemplo.com
SENDGRID_FROM_NAME=Nome do Remetente

# Configuração AWS SES (Email)
AWS_SES_REGION=sua-regiao
AWS_SES_ACCESS_KEY_ID=sua-access-key
AWS_SES_SECRET_ACCESS_KEY=sua-secret-key
AWS_SES_FROM_EMAIL=seu-email@exemplo.com

# Configuração Meta API (WhatsApp)
META_APP_ID=seu-app-id
META_APP_SECRET=seu-app-secret
META_WHATSAPP_BUSINESS_ACCOUNT_ID=seu-account-id
META_WHATSAPP_PHONE_NUMBER_ID=seu-phone-number-id
META_WHATSAPP_ACCESS_TOKEN=seu-access-token

# Configuração de Segurança
JWT_SECRET=seu-jwt-secret
JWT_EXPIRATION=24h
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
